# Increase Volume
"amixer -D pulse sset Master 5%+"
    XF86AudioRaiseVolume

# Decrease Volume
"amixer -D pulse sset Master 5%-"
    XF86AudioLowerVolume

# Mute
"if amixer get Master | grep off; then amixer -D pulse sset Master unmute; else amixer -D pulse sset Master mute; fi"
    XF86AudioMute

"echo seek_chapter 1 > /tmp/mplayercontrol"
XF86AudioNext

"echo seek_chapter -1 > /tmp/mplayercontrol"
XF86AudioPrev

"echo pause > /tmp/mplayercontrol"
XF86AudioPlay

# slock
"slock"
    Pause

# screenshot
"import ~/Pictures/screenshot/screenshot.png"
    Print 

